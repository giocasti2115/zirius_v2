# ZIRIUS V2 - Configuración QA con IP Pública
# =============================================

# 🌐 CONFIGURACIÓN PARA ACCESO EXTERNO QA
NODE_ENV=qa
HOST=0.0.0.0
PORT=5000

# 🎯 URLs QA (Cambiar por tu IP pública)
FRONTEND_URL=http://TU_IP_PUBLICA:3000
BACKEND_URL=http://TU_IP_PUBLICA:5000
API_BASE_URL=http://TU_IP_PUBLICA:5000/api

# 🔒 SEGURIDAD QA (Contraseñas temporales)
JWT_SECRET=qa_jwt_secret_temporal_2024
JWT_EXPIRES_IN=24h
CORS_ORIGIN=*

# 🗄️ BASE DE DATOS QA
DB_HOST=mysql_qa
DB_PORT=3306
DB_NAME=zirius_qa
DB_USER=zirius_qa
DB_PASSWORD=qa_password_123

# 🧪 CONFIGURACIÓN QA
DEBUG=true
LOG_LEVEL=debug
ENABLE_SWAGGER=true

# 📊 MÉTRICAS QA
ENABLE_METRICS=true
QA_MODE=true